@using HaberinMerkezi.Data.Context

<header class="header white-bg">
    <div class="sidebar-toggle-box">
        <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
    </div>
    <!--logo start-->
    <a href=@Url.Action("Index","Home") class="logo">NEWS<span>CENTER</span></a>
    <!--logo end-->
   
    <div class="top-nav ">
        <!--search & user info start-->
        <ul class="nav pull-right top-menu">
            <li>
                <input type="text" class="form-control search" placeholder="Ara">
            </li>
            <!-- user login dropdown start-->
            <li class="dropdown">
                <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                    <img alt="" src=@Url.Content("/Content/img/avatar1_small.jpg")>
                    @{
                        Kullanici aktif = (Kullanici)Session["AktifKullanici"];
                    }
                    <span class="username">@aktif.AdSoyad</span>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu extended logout">
                    <div class="log-arrow-up"></div>
                    <li><a href="#"><i class=" icon-suitcase"></i>Profil</a></li>
                    <li><a href="#"><i class="icon-cog"></i> Ayarlar</a></li>
                    <li><a href="#"><i class="icon-bell-alt"></i> Bildirimler</a></li>
                    <li><a href="/Account/Login"><i class="icon-key"></i> Çıkış Yap</a></li>
                </ul>
            </li>
            <!-- user login dropdown end -->
        </ul>
        <!--search & user info end-->
    </div>
</header>
